<body>
<!-- Start Header Area -->
<header class="header_area sticky-header">
    <div class="main_menu">
        <nav class="navbar navbar-expand-lg navbar-light main_box">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <a class="navbar-brand logo_h" asp-controller="Home" asp-action="Index">
                    <img width="80px" src="images/sport%20store.png" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
                    <ul class="nav navbar-nav menu_nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item submenu dropdown">
                            <a class="nav-link" asp-controller="Category" asp-action="Index">Shop</a>

                        </li>
                        <li class="nav-item submenu dropdown">
                            <a class="nav-link" asp-controller="Home" asp-action="Blog">Blog</a>
                        </li>
                        <li class="nav-item">
                                                    <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                                                </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>

                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item">
                            <a id="cartLink" class="cart" asp-controller="Cart" asp-action="ViewCart">
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="user" asp-controller="User" asp-action="Index" >
                                <i class="fa-solid fa-user"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <button class="search">
                                <i class=" fa-solid fa-magnifying-glass" id="search"></i>
                            </button>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="search_input" id="search_input_box">
        <div class="container">
            <form asp-controller="Product" asp-action="Search" method="get" class="d-flex justify-content-between" id="search">
                <input class="form-control " type="search" placeholder="Nhập tên sản phẩm muốn tìm kiếm" aria-label="Search" name="query" id="search_input">
                <button class=" search btn btn-outline-success my-2 my-sm-0" type="submit">
                </button>
            </form>
        </div>
    </div>
</header>
<!-- End Header Area -->

<div class="container-fluid p-0 m-0">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

